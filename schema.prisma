model Category {
   id          BigInt      @id @default(autoincrement()) @db.BigInt
   name        String      @unique
   category_id BigInt?     @db.BigInt // self-reference
   status      ModelStatus @default(active)
   created_at  DateTime    @default(now())
   updated_at  DateTime    @updatedAt

