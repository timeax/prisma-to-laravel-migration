{
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": "src",
    "outDir": "dist",
    "module": "esnext",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "declarationDir": "@types",
    "lib": ["es2019"],
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": ["__tests__", "@types"]
}
