model Language {
    id             BigInt      @id @default(autoincrement())
    code           String      @unique /// @fillable
    name           String /// @fillable
    file           String /// @fillable
    status         ModelStatus @default(active) /// @fillable
    soft_delete_at DateTime?
    accounts       Account[]

